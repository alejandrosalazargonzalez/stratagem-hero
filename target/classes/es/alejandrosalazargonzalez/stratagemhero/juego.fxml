<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.alejandrosalazargonzalez.stratagemhero.controller.JuegoController">
   <Label fx:id="timerLabel" />
    <ImageView fx:id="stratagemIcon" fitHeight="100" fitWidth="100" />
    <HBox fx:id="sequenceBox" alignment="CENTER" spacing="10">
    </HBox>
    <Label fx:id="stratagemName" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label fx:id="inputProgress" text="Input: " />
   <HBox fx:id="sequenceBox1" alignment="CENTER" layoutX="10.0" layoutY="168.0" prefHeight="26.0" prefWidth="287.0" spacing="10">
      <children>
         <Button fx:id="reiniciarButton" layoutX="132.0" layoutY="10.0" mnemonicParsing="false" onAction="#reiniciarOnClick" text="Reiniciar" />
         <Button fx:id="atrasButton" mnemonicParsing="false" onAction="#juegoToInicio" text="Atras" />
      </children>
   </HBox>
    <Text text="Usa las flechas del teclado para introducir la secuencia" />
</VBox>

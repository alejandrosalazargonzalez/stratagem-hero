<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="es.alejandrosalazargonzalez.stratagemhero.controller.JuegoController">
    <ImageView fx:id="stratagemIcon" fitWidth="100" fitHeight="100" />
    <HBox fx:id="sequenceBox" alignment="CENTER" spacing="10">
    </HBox>
    <Label fx:id="stratagemName" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label fx:id="inputProgress" text="Input: " />
    <Text text="Usa las flechas del teclado para introducir la secuencia" />
</VBox>
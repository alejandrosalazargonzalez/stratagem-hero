<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="550.0" styleClass="fondo" stylesheets="@../../../img/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.alejandrosalazargonzalez.stratagemhero.controller.JuegoController">
    <children>
        <Label fx:id="timerLabel" layoutX="250.0" layoutY="24.0" prefHeight="35.0" prefWidth="48.0" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font></Label>
        
        <ImageView fx:id="stratagemIcon" fitHeight="100" fitWidth="100" layoutX="225.0" layoutY="130.0" />
        
        <HBox fx:id="sequenceBox" alignment="CENTER" layoutX="42.0" layoutY="236.0" prefHeight="50.0" prefWidth="484.0" spacing="10" />
        
        <Label fx:id="stratagemName" alignment="CENTER" layoutX="24.0" layoutY="311.0" prefHeight="27.0" prefWidth="490.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" textFill="WHITE" />
        
        <Label fx:id="inputProgress" layoutX="190.0" layoutY="363.0" text="Input: " textFill="WHITE" />
        
        <HBox fx:id="sequenceBox1" alignment="CENTER" layoutX="131.0" layoutY="481.0" prefHeight="26.0" prefWidth="287.0" spacing="10">
            <children>
                <Button fx:id="reiniciarButton" mnemonicParsing="false" onAction="#reiniciarOnClick" styleClass="boton" stylesheets="@../../../img/style.css" text="Reiniciar">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></Button>
                <Button fx:id="atrasButton" mnemonicParsing="false" onAction="#juegoToInicio" styleClass="boton" stylesheets="@../../../img/style.css" text="Atras" />
            </children>
        </HBox>
        
        <Text fill="WHITE" layoutX="131.0" layoutY="454.0" text="Usa las flechas del teclado para introducir la secuencia" />
    </children>
</AnchorPane>
